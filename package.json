  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "release": "node release.js",
    "release:patch": "node release.js patch",
    "release:minor": "node release.js minor",
    "release:major": "node release.js major",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
